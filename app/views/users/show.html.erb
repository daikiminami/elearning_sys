<div class="container">
    <div class="raw">
        <div class="col-4 text-center">
            <p><h2><%= @user.name %></h2></p>
                <p class="rounded-circle" ><%= image_tag @user.avatar.url , size:"150x150" ,class:"rounded-circle" %></p>
            <p><%= @user.email %></p>
                <div class="col-6 offset-3"><%= link_to @user.active_relationships.count,following_user_path(@user)%></div>
                <div class="col-6 offset-3">following</div>
                <div class="col-6 offset-3"><%= link_to @user.passive_relationships.count,followers_user_path(@user)%></div>
                <div class="col-6 offset-3">followers</div>
            </div>
        </div>
    </div>
</div>
