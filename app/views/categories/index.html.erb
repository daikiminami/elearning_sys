<h1>Categories</h1>
<div class="container">
    <div class="row">   
        <ul class="nav nav-pills nav-warning offset-lg-9">
            <li><%= link_to "All",categories_path ,class: "btn btn-outline-primary mr-1 #{current_page(nil)}"%></li>
            <li><%= link_to "Learned",categories_path(status: :learned),class: "btn btn-outline-primary mr-1 #{current_page("learned")}" %></li>
            <li><%= link_to "not Learn",categories_path(status: :unlearned),class: "btn btn-outline-primary mr-1 #{current_page("unlearned")}" %></li>
        </ul>
    </div>
    <div class="row">
        <% @categories.each do |category| %>
            <div class="col-4">
                <div class="card border-info my-3 mx-auto" style="max-width: 23rem;">
                    <div class="card-header"><%= category.title %></div>
                    <div class="card-body text-info">
                        <p class="card-text"><%= category.description %></p>
                        <% if lesson(category, current_user) && lesson(category, current_user).result%>
                            <p><%= link_to 'Show result', lesson_path(lesson(category, current_user)), class:"btn btn-info btn-lg"%></p>
                        <% else %>
                            <p><%= link_to 'Learn', lessons_path(category_id: category.id), method: :post, class:"btn btn-info btn-lg"%></p>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>