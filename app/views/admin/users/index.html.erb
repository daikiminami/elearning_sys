<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1>Users Admin</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                    <th width="250">Name</th>
                    <th width="250">Email</th>
                    <th width="100">Word</th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <% if user==current_user %>
                            <% else %>
                                <td width="250"><%= user.name %></td>
                                <td width="250"><%= user.email %></td>
                                <% if user.admin == true %>
                                    <td width="100"><%= link_to "Unadmin", admin_user_path(user), method: :delete, class:"btn btn-outline-primary" %></td>
                                <% else %>
                                    <td width="100"><%= link_to "Add admin", admin_user_path(user),method: :patch, class: "btn btn-outline-primary" %></td>
                                <% end %>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
